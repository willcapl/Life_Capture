      <meta name="google-analytics-id" content="G-JWVWX6Y2DY">
   <%end%>



  </head>

  <body>
    <%= render "shared/navbar" %>
    <%= render "shared/flashes" %>
    <div class="min-height">
       <%= yield %>
    </div>
<% unless (controller_name == 'sub_users' && action_name == 'new' ) || (controller_name == 'pages' && action_name == 'dashboard') ||  (controller_name == 'sub_users' && action_name == 'other_new') %>
  <%= render 'pages/footer' %>
<% end %>
  </body>
</html>
