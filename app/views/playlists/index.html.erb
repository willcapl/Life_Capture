<div class="container">
  <div class="show-header-container">
    <div class="header-name">
      <h1><%= @sub_user.name.capitalize%>'s profile</h1>
    </div>
  </div>


 <div class="navbar-show">
    <li class="nav-item">
      <%= link_to 'Upcoming Stories', sub_user_show_path(@sub_user), class: 'nav-link' %>
    </li>
      </li>
      <li class="nav-item nav-active">
        <%= link_to 'Story Bank', sub_user_stories_path(@sub_user), class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Playlists', sub_user_playlists_path(@sub_user), class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Film', film_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Book', book_path, class: 'nav-link' %>
      </li>
      <div class="btn-group dropstart">
      <button type="button" class="burger-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa-solid fa-bars" style="margin: auto;"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-border">
      <li> <%= link_to 'Dashboard', dashboard_path, class: "dropdown-i" %> </li>
        <li> <%= link_to 'Edit profile', edit_sub_user_path(@sub_user), class: "dropdown-i" %> </li>
        <li><%= link_to 'Delete profile', sub_user_path(@sub_user), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this subuser?'}, class: "dropdown-i" %> </li>
          <!-- Dropdown menu links -->
      </ul>
    </div>
  </div>


<div class="show-container">
  <div class="videos-container">
    <div>
      <% @playlists.each do |playlist| %>
        <div class="btn-group">
          <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#playlist<%= playlist.id%>" aria-expanded="false" aria-controls="playlist<%= playlist.id%>">
            <%= playlist.name %>
          </button>
          <div class="collapse" id="playlist<%= playlist.id%>">
            <div class="row">
              <% playlist.questions.each do |question| %>
                <div class="col-6">
                  <div class="video-card">
                    <div class="video-card-title">
                      <h4> <%= question.title %></h4>
                      <div class="btn-group dropstart">
                        <button type="button" class="burger-dropdown-showpage" data-bs-toggle="dropdown" aria-expanded="false">
                          <i class="fa-solid fa-ellipsis-vertical" style="margin: auto;"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-border">
                          <li> <%= link_to 'Re-Record video', sub_user_question_path(@sub_user, question) %> </li>
                          <li>  <%= link_to 'Delete story', question_path(question), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete the memory?'} %> </li>                    <!-- Dropdown menu links -->
                        </ul>
                      </div>
                    </div>
                    <canvas id="canvas" style="display: none;"></canvas>
                    <div class="video-card-box">
                      <% if Rails.env.development? %>
                        <video src="https://res.cloudinary.com/dpqge0m1h/raw/upload/v1701279627/development/<%= question.video.key %>.mp4" controls="controls" preload="none" class="video-card-video"></video>
                      <% elsif Rails.env.production? %>
                        <video src="https://res.cloudinary.com/dpqge0m1h/raw/upload/v1701279627/production/<%= question.video.key %>.mp4" controls="controls" preload="none" class="video-card-video"></video>
                      <% end %>
                    </div>
                    <div>
                  </div>
                </div>
                </div>
              <% end %>
            </div>
            <div class="card card-body">
              <%= simple_form_for [@sub_user, playlist, @response_bookmark] do |f|%>
                <%= f.input :question_id, collection:  @questions.select{ |question| question.video.attached? && !playlist.questions.include?(question) } %>
                <%= f.button :submit %>
              <% end %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
       <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" style="flex-shrink: 0; margin-left: 36px;">
      Create New Playlist
    </button>





    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [@sub_user, @playlist] do |f| %>
              <%= f.input :name %>
              <%= f.input :description %>
              <%= f.submit "Confirm"%>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
