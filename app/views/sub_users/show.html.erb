
<div class="container">
  <div class="show-header-container">
    <div class="header-name">
      <h1><%= @sub_user.name.capitalize%>'s profile</h1>
      <%# <%= cl_image_tag @sub_user.photo.key %>
    </div>
    <div class="btn-group dropstart">
      <button type="button" class="burger-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fa-solid fa-bars" style="margin: auto;"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-border">
      <li> <%= link_to 'Dashboard', dashboard_path, class: "dropdown-i" %> </li>
        <li> <%= link_to 'Edit profile', edit_sub_user_path(@sub_user), class: "dropdown-i" %> </li>
        <li><%= link_to 'Delete profile', sub_user_path(@sub_user), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this subuser?'}, class: "dropdown-i" %> </li>
          <!-- Dropdown menu links -->
      </ul>
    </div>
  </div>
  <div class="navbar-show">
    <li class="nav-item nav-active">
      <%= link_to 'Upcoming Stories', sub_user_show_path(@sub_user), class: 'nav-link' %>
    </li>
      </li>
      <li class="nav-item">
        <%= link_to 'Story Bank', sub_user_stories_path(@sub_user), class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Playlists', sub_user_playlists_path(@sub_user), class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Film', dashboard_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Book', dashboard_path, class: 'nav-link' %>
      </li>
  </div>
  <div class="show-container">
    <div class="videos-container">
      <div class="questions-index-title">
        <h2>Your generated questions....</h2>
        <h5>View all your questions here, click on one to record or return to your profile and answer them later</h5>
      </div>
      <div class="generated-questions-all-cards">
        <ul>
          <% video_not_attached = @questions.reject { |question| question.video.attached?} %>
            <% if video_not_attached.empty? %>
              <h3>You have answered all of the available questions.</h3>
            <% else %>
              <% @dates.each do |date| %>
                <% if ( date - Date.today ) < 7 && ( date - Date.today ) >= 0 %>
                  <h3>This weeks recordings</h3>
                <% else %>
                  <h3><%= date.strftime("%A, %d %b %Y") %></h3>
                <% end %>
                <% video_not_attached.each_with_index do |question, index| %>
                <% if question.answer_date == date %>
                  <div class="generated-questions-card">
                    <%= link_to( question.title, sub_user_question_path(@sub_user, question)) %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
